@model Sindie.ApiService.Core.Contracts.CreatureTemplateRequests.ChangeDamageTypeModifierCommand

@{
    ViewData["Title"] = "Edit Damage Type Modifier";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditDamageTypeModifier">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DamageType" class="control-label"></label>
                <select asp-for="DamageType"
                        class="form-control"
                        asp-items="Html.GetEnumSelectList<Sindie.ApiService.Core.BaseData.Enums.DamageType>()">
                    <option>Select Damage Type ...</option>
                </select>
                <span asp-validation-for="DamageType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DamageTypeModifier" class="control-label"></label>
                <select asp-for="DamageTypeModifier"
                        class="form-control"
                        asp-items="Html.GetEnumSelectList<Sindie.ApiService.Core.BaseData.Enums.DamageTypeModifier>()">
                    <option>Select Damage Type Modifier ...</option>
                </select>
                <span asp-validation-for="DamageTypeModifier" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<p>@ViewData["ErrorMessage"]</p>

<div class="container">
    @Html.ActionLink("Back to Creature Template", "Details", new { id = Model.CreatureTemplateId })
</div>


