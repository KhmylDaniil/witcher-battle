@model Sindie.ApiService.Core.Contracts.BattleRequests.ChangeCreatureCommand

@{
    ViewData["Title"] = "Change Creature";
}

<h1>Change Creature</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangeCreature">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<p>@TempData["ErrorMessage"]</p>

<div class="container">
    @Html.ActionLink("Back to Battle", "Details", new { id = Model.BattleId })
</div>


