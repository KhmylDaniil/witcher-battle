@model Sindie.ApiService.Core.Contracts.BattleRequests.GetBattleByIdResponse

@{
    ViewData["Title"] = "Details";
}

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit Battle", "Edit", Model)
</div>

<h4>Creatures in battle</h4>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Creatures.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Creatures.First().CreatureTemplateName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Creatures.First().Description)
            </th>
            <th>
                @Html.ActionLink("Add new creature", "CreateCreature",
                new { BattleId = Model.Id })
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Creatures)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatureTemplateName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.ActionLink("Edit", "ChangeCreature",
                new { BattleId = Model.Id, Id = item.Id, Name = item.Name, Description = item.Description })
                    | @Html.ActionLink("Details", "GetCreatureById",
                new { BattleId = Model.Id, Id = item.Id })
                    | @Html.ActionLink("Delete", "DeleteCreature", new { BattleId = Model.Id, Id = item.Id, Name = item.Name })
                </td>
            </tr>
        }
    </tbody>
</table>


<p>@TempData["ErrorMessage"]</p>

<div class="container">
    <a asp-action="Index">Back to Battles</a>
</div>