@model Sindie.ApiService.Core.Contracts.BodyTemplatePartsRequests.ChangeBodyTemplatePartCommand

@{
    ViewData["Title"] = "EditParts";
}

<h1>EditParts</h1>

<h4>ChangeBodyTemplatePartCommand</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditParts">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BodyPartType" class="control-label"></label>
                <select asp-for="BodyPartType"
                        class="form-control"
                        asp-items="Html.GetEnumSelectList<Sindie.ApiService.Core.BaseData.Enums.BodyPartType>()">
                    <option>Select BodyPartType ...</option>
                </select>
                <span asp-validation-for="BodyPartType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DamageModifier" class="control-label"></label>
                <input asp-for="DamageModifier" class="form-control" />
                <span asp-validation-for="DamageModifier" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HitPenalty" class="control-label"></label>
                <input asp-for="HitPenalty" class="form-control" />
                <span asp-validation-for="HitPenalty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MinToHit" class="control-label"></label>
                <input asp-for="MinToHit" class="form-control" />
                <span asp-validation-for="MinToHit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxToHit" class="control-label"></label>
                <input asp-for="MaxToHit" class="form-control" />
                <span asp-validation-for="MaxToHit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="container">
    @Html.ActionLink("Back to Body Template", "Details", new { GameId = Model.GameId, id = Model.Id })
</div>

