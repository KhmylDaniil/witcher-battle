@model Sindie.ApiService.Core.Contracts.BodyTemplateRequests.GetBodyTemplateById.GetBodyTemplateByIdResponse

@{
    ViewData["Title"] = @Html.DisplayFor(model => model.Name) + "body template details";
}

<h1>Body Template</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>

<div class="container">
    @Html.ActionLink("Edit Body Template", "Edit", new { GameId = Model.GameId, id = Model.Id })
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GetBodyTemplateByIdResponseItems.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GetBodyTemplateByIdResponseItems.First().BodyPartType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GetBodyTemplateByIdResponseItems.First().DamageModifier)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GetBodyTemplateByIdResponseItems.First().HitPenalty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GetBodyTemplateByIdResponseItems.First().MinToHit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GetBodyTemplateByIdResponseItems.First().MaxToHit)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.GetBodyTemplateByIdResponseItems)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BodyPartType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DamageModifier)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HitPenalty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MinToHit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaxToHit)
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="container">
    @Html.ActionLink("Edit Body Template Parts", "EditParts", new { GameId = Model.GameId, id = Model.Id })
</div>


<div class="container">
    <a asp-action="Index" asp-route-gameId=@Model.GameId>Back to Body Templates</a>
</div>
