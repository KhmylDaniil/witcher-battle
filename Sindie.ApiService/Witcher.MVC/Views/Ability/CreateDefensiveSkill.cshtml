@model Sindie.ApiService.Core.Contracts.AbilityRequests.CreateDefensiveSkillCommand

@{
    ViewData["Title"] = "Create Defensive Skill";
}

<h1>Create Defensive Skill</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateDefensiveSkill">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Skill" class="control-label"></label>
                <select asp-for="Skill"
                        class="form-control"
                        asp-items="Html.GetEnumSelectList<Sindie.ApiService.Core.BaseData.Enums.Skill>()">
                    <option>Select Skill ...</option>
                </select>
                <span asp-validation-for="Skill" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="container">
    @Html.ActionLink("Back to ability", "Details", new { GameId = Model.GameId, id = Model.AbilityId })
</div>

