@model Sindie.ApiService.Core.Contracts.AbilityRequests.ChangeAbilityCommand

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Change Ability</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" value=@Model.Name />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" value=@Model.Description/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AttackSkill" class="control-label"></label>
                <select asp-for="AttackSkill"
                        class="form-control"
                        asp-items="Html.GetEnumSelectList<Sindie.ApiService.Core.BaseData.Enums.Skill>()">
                    <option>Select AttackSkill ...</option>
                </select>
                <span asp-validation-for="AttackSkill" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AttackDiceQuantity" class="control-label"></label>
                <input asp-for="AttackDiceQuantity" class="form-control" value=@Model.AttackDiceQuantity/>
                <span asp-validation-for="AttackDiceQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DamageModifier" class="control-label"></label>
                <input asp-for="DamageModifier" class="form-control" value=@Model.DamageModifier/>
                <span asp-validation-for="DamageModifier" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AttackSpeed" class="control-label"></label>
                <input asp-for="AttackSpeed" class="form-control" value=@Model.AttackSpeed/>
                <span asp-validation-for="AttackSpeed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Accuracy" class="control-label"></label>
                <input asp-for="Accuracy" class="form-control" value=@Model.Accuracy/>
                <span asp-validation-for="Accuracy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DamageType" class="control-label"></label>
                <select asp-for="DamageType"
                        class="form-control"
                        asp-items="Html.GetEnumSelectList<Sindie.ApiService.Core.BaseData.Enums.DamageType>()">
                    <option>Select DamageType ...</option>
                </select>
                <span asp-validation-for="DamageType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<p>@TempData["ErrorMessage"]</p>

<div>
    <a asp-action="Index">Back to Abilities</a>
</div>

