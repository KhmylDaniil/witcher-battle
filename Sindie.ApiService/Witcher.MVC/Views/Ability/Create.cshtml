@model Sindie.ApiService.Core.Contracts.AbilityRequests.CreateAbility.CreateAbilityCommand

@{
    ViewData["Title"] = "Create Ability";
}

<h4>Create Ability</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AttackSkill" class="control-label"></label>
                <select asp-for="AttackSkill"
                        class="form-control"
                        asp-items="Html.GetEnumSelectList<Sindie.ApiService.Core.BaseData.Enums.Skill>()">
                    <option>Select AttackSkill ...</option>
                </select>
                <span asp-validation-for="AttackSkill" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AttackDiceQuantity" class="control-label"></label>
                <input asp-for="AttackDiceQuantity" class="form-control" value=1 />
                <span asp-validation-for="AttackDiceQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DamageModifier" class="control-label"></label>
                <input asp-for="DamageModifier" class="form-control" />
                <span asp-validation-for="DamageModifier" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AttackSpeed" class="control-label"></label>
                <input asp-for="AttackSpeed" class="form-control" value=1 />
                <span asp-validation-for="AttackSpeed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Accuracy" class="control-label"></label>
                <input asp-for="Accuracy" class="form-control" />
                <span asp-validation-for="Accuracy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DamageType" class="control-label"></label>
                <select asp-for="DamageType"
                        class="form-control"
                        asp-items="Html.GetEnumSelectList<Sindie.ApiService.Core.BaseData.Enums.DamageType>()">
                    <option>Select DamageType ...</option>
                </select>
                <span asp-validation-for="DamageType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<p>@ViewData["ErrorMessage"]</p>

<div>
    <a asp-action="Index" asp-route-gameId=@Model.GameId>Back to List</a>
</div>

