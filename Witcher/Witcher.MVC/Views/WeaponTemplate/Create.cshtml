@model Witcher.Core.Contracts.WeaponTemplateRequests.CreateWeaponTemplateCommand

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>CreateWeaponTemplateCommand</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label"></label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AttackSkill" class="control-label"></label>
                <select asp-for="AttackSkill"
                        class="form-control"
                        asp-items="Html.GetEnumSelectList<Witcher.Core.BaseData.Enums.Skill>()">
                    <option>Select AttackSkill ...</option>
                </select>
                <span asp-validation-for="AttackSkill" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AttackDiceQuantity" class="control-label"></label>
                <input asp-for="AttackDiceQuantity" class="form-control" />
                <span asp-validation-for="AttackDiceQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DamageModifier" class="control-label"></label>
                <input asp-for="DamageModifier" class="form-control" />
                <span asp-validation-for="DamageModifier" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Accuracy" class="control-label"></label>
                <input asp-for="Accuracy" class="form-control" />
                <span asp-validation-for="Accuracy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DamageType" class="control-label"></label>
                <select asp-for="DamageType"
                        class="form-control"
                        asp-items="Html.GetEnumSelectList<Witcher.Core.BaseData.Enums.DamageType>()">
                    <option>Select DamageType ...</option>
                </select>
                <span asp-validation-for="DamageType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Durability" class="control-label"></label>
                <input asp-for="Durability" class="form-control" />
                <span asp-validation-for="Durability" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Range" class="control-label"></label>
                <input asp-for="Range" class="form-control" />
                <span asp-validation-for="Range" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<p>@TempData["ErrorMessage"]</p>

<div>
    <a asp-action="Index">Back to List</a>
</div>