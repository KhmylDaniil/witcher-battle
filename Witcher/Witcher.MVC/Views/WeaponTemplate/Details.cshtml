<div>
    @Html.ActionLink("Edit", "Edit", @Model)
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AppliedConditions.First().Condition)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppliedConditions.First().ApplyChance)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.AppliedConditions)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Condition)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApplyChance)
                </td>
                <td>
                    @Html.ActionLink("Edit", "UpdateAppliedCondition",
                new { weaponTemplateId=Model.Id, id = item.Id, condition = item.Condition, applyChance = item.ApplyChance}) |
                    @Html.ActionLink("Delete", "DeleteAppliedCondition", new { weaponTemplateId=Model.Id, id = item.Id })
                </td>
            </tr>
        }
        <tr>
            <td>
                @Html.ActionLink("Add new applied condition", "UpdateAppliedCondition", new { weaponTemplateId=Model.Id })
            </td>
        </tr>
    </tbody>
</table>

<p>@TempData["ErrorMessage"]</p>

<div class="container">
    <a asp-action="Index">Back to Weapon templates</a>
</div>