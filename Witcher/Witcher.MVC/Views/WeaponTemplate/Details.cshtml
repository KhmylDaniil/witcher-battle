        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AttackSkill)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DamageType)
        </dt>
        <dd class = "col-sm-10">
