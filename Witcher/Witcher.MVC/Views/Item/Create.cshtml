@model Witcher.MVC.ViewModels.Item.CreateItemViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>CreateItemCommand</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ItemTemplateId" class="control-label"></label>
                <select asp-items="@(new SelectList(Model.ItemTemplatesDictionary, "Key", "Value"))" asp-for="ItemTemplateId"></select><br /><br />
                <span asp-validation-for="ItemTemplateId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Character" asp-action="Details" asp-route-id="@Model.CharacterId">Back to Character</a>
</div>

