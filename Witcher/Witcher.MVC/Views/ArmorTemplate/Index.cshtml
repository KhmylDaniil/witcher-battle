@model IEnumerable<Witcher.Core.Contracts.ArmorTemplateRequests.GetArmorTemplateResponse>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create">Create new Armor Template</a>
</p>

<form asp-action="Index">
    <p><input type="text" name="name" /> Name</p>
    <p><input type="text" name="bodyPartType" /> Covered body part</p>
    <p><input type="text" name="damageTypeModifier" /> Interacted with damage type</p>
    <p><input type="text" name="userName" /> Author Name</p>
    <p><input type="number" name="minArmor" /> Min armor</p>
    <p><input type="number" name="maxArmor" /> Max armor</p>
    <p><input type="submit" value="Search" /></p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Armor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EncumbranceValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BodyTemplateName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Armor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EncumbranceValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BodyTemplateName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.Id, name = item.Name })
            </td>
        </tr>
}
    </tbody>
</table>

<p>@TempData["ErrorMessage"]</p>

<div class="container">
    <a asp-controller="Game" asp-action="Enter" asp-route-id=@ViewData["GameID"]>Back to Game</a>
</div>