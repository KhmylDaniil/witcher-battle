@model Witcher.MVC.ViewModels.Game.CreateUserGameCommandViewModel

@{
    ViewData["Title"] = "Add user to game";
}

<h4>Add user to game</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateUserGame">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="UserId" class="control-label"></label>
                    <select asp-items="@(new SelectList(Model.UserDictionary, "Key", "Value"))" asp-for="UserId"></select><br /><br />
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>
            <div class="form-group">
                <label asp-for="RoleId" class="control-label"></label>
                <select asp-items="@(new SelectList(Model.GameRolesDictionary, "Key", "Value"))" asp-for="RoleId"></select><br /><br />
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<p>@TempData["ErrorMessage"]</p>

<div>
    <a asp-action="Enter" asp-route-id="@ViewData["GameId"]">Back to game</a>
</div>

