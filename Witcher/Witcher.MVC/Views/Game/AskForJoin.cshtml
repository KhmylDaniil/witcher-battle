@model Witcher.Core.Contracts.GameRequests.JoinGameRequest

<h4>Join game</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AskForJoin">
            <div class="form-group">
                <label asp-for="Message" class="control-label"></label>
                <input asp-for="Message" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="GameId" value="@Model.GameId" hidden=true class="form-control" />
                <input asp-for="UserId" value="@Model.UserId" hidden=true class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Ask for join" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<p>@TempData["ErrorMessage"]</p>
<div>
    <a asp-action="Index">Back to games</a>
</div>
