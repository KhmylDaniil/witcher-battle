@model Witcher.MVC.ViewModels.RunBattle.MakeHealViewModel

@{
    ViewData["Title"] = "Heal";
}

<h1>Heal</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Heal" asp-route-battleId=@Model.BattleId>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="BattleId" value="@Model.BattleId" hidden=true class="form-control" />
                <input asp-for="TargetCreatureId" value="@Model.TargetCreatureId" hidden=true class="form-control" />
                <input asp-for="CreatureId" value="@Model.CreatureId" hidden=true class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="EffectId" value="Effect" class="control-label"></label>
                <select asp-items="@(new SelectList(Model.EffectsOnTarget, "Key", "Value"))" asp-for="EffectId"></select><br /><br />
                <span asp-validation-for="EffectId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Heal" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<p>@TempData["ErrorMessage"]</p>

<div>
    <a asp-action="Run" asp-route-battleId=@Model.BattleId>Back to Battle</a>
</div>

