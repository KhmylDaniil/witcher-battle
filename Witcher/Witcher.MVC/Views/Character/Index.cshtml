@model IEnumerable<Witcher.Core.Contracts.CharacterRequests.GetCharactersResponseItem>

@{
    ViewData["Title"] = "Characters";
}

<h1>Characters</h1>

<p>
    <a asp-controller="CreatureTemplate" asp-action="Index">Go to creature templates to make a character from the template</a>
</p>

<form asp-action="Index">
    <p><input type="text" name="name" /> Name</p>
    <p><input type="text" name="userName" />Owner name</p>
    <p><input type="submit" value="Search" /></p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OwnerName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OwnerName)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>

<p>@TempData["ErrorMessage"]</p>

<div class="container">
    <a asp-controller="Game" asp-action="Enter" asp-route-id="@ViewData["GameId"]">Back to Game</a>
</div>
