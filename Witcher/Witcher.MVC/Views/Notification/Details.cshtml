@model Witcher.Core.Notifications.Notification

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Notification</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Message)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Message)
    </dl>
</div>

@if(Model is Witcher.Core.Notifications.YesOrNoDecisionNotification)
{
    <form asp-action="Decide" asp-route-Id=@Model.Id asp-route-accept=true>
        <div class="form-group">
            <input type="submit" value="Accept" class="btn btn-primary" />
        </div>
    </form>
    <form asp-action="Decide" asp-route-Id=@Model.Id asp-route-accept=false>
        <div class="form-group">
            <input type="submit" value="Decline" class="btn btn-primary" />
        </div>
    </form>
}

<p>@TempData["ErrorMessage"]</p>

<div>
    <a asp-action="Index">Back to Notifications</a>
</div>
